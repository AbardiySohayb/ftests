@model IEnumerable<ftest.Models.Etd>


<h1>ListeEtd</h1>
<p>
    <a class="btn btn-outline-secondary" asp-controller="Etd" asp-action="NewEtd">New etd</a>
</p>

<p>@using (Html.BeginForm("ListeEtd","Etd",FormMethod.Get))
    {
        <b>Search By :</b>
        @Html.RadioButton("SearchBy","Nom",true) <text>Nom</text>
        @Html.RadioButton("SearchBy","Matiere",true) <text>Matiere</text> <br>
        @Html.TextBox("Search","",htmlAttributes:new {@class=" w-50 form-control"})
        <input type="submit" value="Search" class="btn btn-success" />

    }
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prenom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Filiere)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="4">9aleb 3la chi haja akhra </td>
            </tr>

        }
           else {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nom)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Prenom)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Filiere)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-controller="Etd" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-controller="Etd" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-controller="Etd" asp-route-id="@item.Id">Delete</a>
                        <a asp-action="Profs" asp-controller="Etd" asp-route-id="@item.Id">afficher</a>
                        <a asp-action="Newdem" asp-controller="Dem" asp-route-id="@item.Id">Ajouter</a>
                    </td>
                </tr>
            }

        }
    </tbody>
</table>
